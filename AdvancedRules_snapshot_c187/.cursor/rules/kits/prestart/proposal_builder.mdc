<rule>
name: proposal_builder
triggers:
  - command: "/proposal"
inputs_optional:
  - "memory-bank/plan/client_brief.md"
  - "memory-bank/business/estimate_brief.md"
  - "memory-bank/business/pricing.ratecard.yaml"
outputs:
  - "memory-bank/plan/proposal.md"
actions:
  - type: generate_file
    path: "memory-bank/plan/proposal.md"
